<article class="image-text" itemscope itemtype="https://schema.org/Report">
    <figure class="image">
        {% if caseStudy.data.metaImage %}
        {% set alt = "No image description provided." %}
        {% if caseStudy.data.metaImageAlt %}
            {% set alt = caseStudy.data.metaImageAlt %}
        {% endif %}
        {% resizeImage caseStudy.data.metaImage, alt, ['1x', '2x'], [570, 1140] %}
        {% endif %}
    </figure>
    <div class="text">
        <h2 itemprop="name"><a href="{{ caseStudy.url }}">{{ caseStudy.data.title }}</a></h2>
        <p class="subtitle">{{ caseStudy.data.subtitle }}</p>
        <p class="byline">By {% for author in caseStudy.data.authors %}
            {%- if not loop.first -%}
            {{ " and " if loop.last else ", " }}
            {%- endif -%}
            <span itemprop="author">{{ author }}</span>
        {%- endfor %}{% if caseStudy.data.organization %}, <span itemprop="sourceOrganization">{{ caseStudy.data.organization }}</span>{% endif %}</p>
        <p class="date" itemprop="temporalCoverage" content="{{ caseStudy.data.startDate }}/{{ caseStudy.data.endDate if caseStudy.data.endDate else ".." }}">{{ caseStudy.data.startDate }}{% if caseStudy.data.endDate -%}
        {{ "–" + caseStudy.data.endDate if caseStudy.data.endDate !== caseStudy.data.startDate else "" }}
        {%- else -%}
        –present
        {%- endif %}
        </p>
    </div>
</article>
