<article class="grid grid--2 image-text">
    <figure class="image">
        <img src="data:image/jpeg;base64," alt="" />
    </figure>
    <div class="text">
        <h2><a href="{{ caseStudy.url }}">{{ caseStudy.data.title }}</a></h2>
        <p class="subtitle">{{ caseStudy.data.subtitle }}</p>
        <p class="byline">By {%- for author in caseStudy.data.authors %}
            {{ "" if loop.first else ", " }}
            {{ author }}
        {%- endfor %}{% if caseStudy.data.organization %}, {{ caseStudy.data.organization }}{% endif %}</p>
        <p class="date">{{ caseStudy.data.startDate }}{% if caseStudy.data.endDate -%}
        {{ "–" + caseStudy.data.endDate if caseStudy.data.endDate !== caseStudy.data.startDate else "" }}
        {%- else -%}
        –present
        {%- endif %}
        </p>
    </div>
</article>
