<header class="[ header ] [ {% if bannerBg %}bg-{{ bannerBg }} {% endif %} {% if bannerText %}text-{{ bannerText }} {% endif %}]">
    <div class="wrapper">
        <h1 itemprop="name">{{ title | safe}}</h1>
        {% if subtitle %}
        <p class="subtitle">{{ subtitle | safe }}</p>
        {% endif %}
        {% if page.url == "/" %}
        <div class="illustration">
        {% include "svg/illustration.svg" %}
        </div>
        {% endif %}
    </div>
</header>
