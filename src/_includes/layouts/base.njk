<!doctype html>
<html class="no-js" lang="en-ca">
    <head>
        {% include "partials/global/meta.njk" %}
        {% include "partials/global/icons.njk" %}
        <link rel="preload" href="/assets/fonts/alegreya-sans-v13-latin-500.woff2" as="font" type="font/woff2" crossorigin>
        <link rel="preload" href="/assets/fonts/alegreya-sans-v13-latin-500italic.woff2" as="font" type="font/woff2" crossorigin>
        <link rel="preload" href="/assets/fonts/alegreya-sans-v13-latin-700.woff2" as="font" type="font/woff2" crossorigin>
        <link rel="preload" href="/assets/fonts/alegreya-sans-v13-latin-700italic.woff2" as="font" type="font/woff2" crossorigin>
        <link rel="preload" href="/assets/fonts/alegreya-sans-v13-latin-regular.woff2" as="font" type="font/woff2" crossorigin>
        <link rel="preload" href="/assets/fonts/alegreya-sans-v13-latin-italic.woff2" as="font" type="font/woff2" crossorigin>
        <link rel="preload" href="/assets/fonts/open-sans-v18-latin-700.woff2" as="font" type="font/woff2" crossorigin>
        {% include "partials/global/stylesheets.njk" %}
        <script>document.documentElement.classList.remove('no-js');</script>
        {% include "partials/global/scripts.njk" %}
        {% block headerScripts %}
        {% endblock %}
    </head>
    <body{% if bodyClass %} class="{{ bodyClass }}"{% endif %}>
        {% uioTemplate %}
        {% include "partials/global/header.njk" %}
        <main>
            {% set itemType = "WebPage" %}
            {% if bodyClass === "single-resource" %}
                {% set itemType = "Guide" %}
            {% elif bodyClass === "single-case-study" %}
                {% set itemType = "Article" %}
            {% elif page.url === "/about/" %}
                {% set itemType = "AboutPage" %}
            {% endif %}
            <article itemscope itemtype="https://schema.org/{{ itemType }}">
                {% block pageHeader %}
                {% include "partials/global/page-header.njk" %}
                {% endblock %}
                {% block content %}
                <div class="content">
                {{ content | safe }}
                </div>
                {% endblock %}
            </article>
        </main>
        {% include "partials/global/footer.njk" %}
        {% if bodyClass == 'home' %}
        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" defer></script>
        {% endif %}
    </body>
</html>
