<!doctype html>
<html class="no-js" lang="en-ca">
    <head>
        {% include "partials/global/meta.njk" %}
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/svg+xml" href="/favicon.svg">
        <link rel="alternate icon" type="image/png" href="/favicon.ico">
        <link rel="alternate icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="alternate icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1b4066">
        <meta name="msapplication-TileColor" content="#2b5797">
        <meta name="theme-color" content="#eef3f9">
        {% include "partials/global/stylesheets.njk" %}
        <script>document.documentElement.classList.remove('no-js');</script>
        {% include "partials/global/scripts.njk" %}
        {% block headerScripts %}
        {% endblock %}
    </head>
    <body{% if bodyClass %} class="{{ bodyClass }}"{% endif %}>
        {% uioTemplate %}
        {% include "partials/global/header.njk" %}
        <main>
            {% set itemType = "WebPage" %}
            {% if bodyClass === "single-resource" %}
                {% set itemType = "Guide" %}
            {% elif bodyClass === "single-case-study" %}
                {% set itemType = "Article" %}
            {% elif page.url === "/about/" %}
                {% set itemType = "AboutPage" %}
            {% endif %}
            <article itemscope itemtype="https://schema.org/{{ itemType }}">
                {% block pageHeader %}
                {% include "partials/global/page-header.njk" %}
                {% endblock %}
                {% block content %}
                <div class="content">
                {{ content | safe }}
                </div>
                {% endblock %}
            </article>
        </main>
        {% include "partials/global/footer.njk" %}
        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js" defer></script>
    </body>
</html>
